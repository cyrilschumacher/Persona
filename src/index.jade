doctype html
html(lang="fr" prefix="og:http://ogp.me/ns#")
    head
        meta(charset="utf-8")
        title(data-ng-bind="viewTitle ? viewTitle + ' - Persona' : 'Persona'")

        meta(name="description" content="{{head.description}}")
        meta(name="keywords" content="{{head.keywords}}")
        meta(name="robots" content="")
        
        meta(name="fragment" content="!")
        
        meta(name="msvalidate.01" content="BD1F594BA412B936EF9573364E3DD353")
        meta(name="google-site-verification" content="Um2PnIeRij_vuWfeGs0zW3J0khKVI-FvX8czxYjrm6k")

        meta(property="og:title" content="")
        meta(property="og:type" content="")
        meta(property="og:url" content="")
        
        base(href="/")
    body
        input#drawer-toggle(type="checkbox" name="drawer-toggle")
        label#drawer-toggle-label.no-selection(for="drawer-toggle")

        section.l-main(data-ng-view)

        div.route-loading(data-ng-hide="!isLoading")
            span
                i.fa.fa-circle-o-notch
            span(data-ng-i18next="loading")

        nav.l-nav(role="navigation" lang="fr" itemscope itemtype="http://schema.org/SiteNavigationElement")
            div.l-nav-container.vertical-horizontal-center
                ul
                    li 
                        a.nav-item-home(href="/#!/")
                            span.icon
                                i.iconicfill-home
                            span(data-ng-i18next="common.nav.home") 
                    li
                        a.nav-item-about(href="/#!/about")
                            span.icon
                                i.iconicfill-folder-fill
                            span(data-ng-i18next="common.nav.about") 
                    li
                        a.nav-item-works(href="/#!/works")
                            span.icon
                                i.iconicfill-paperclip
                            span(data-ng-i18next="common.nav.works") 
                    li
                        a.nav-item-contact(href="/#!/contact")
                            span.icon
                                i.iconicfill-map-pin-alt
                            span(data-ng-i18next="common.nav.contact")

        footer.l-footer.no-selection(role="contentinfo" itemscope itemtype="http://schema.org/WPFooter")
            div.l-footer-container
                section.l-footer-container-copyright
                    div.links
                        ul
                            li
                                a(href="/#!/" data-ng-i18next="common.nav.home")
                            li
                                a(href="/#!/about" data-ng-i18next="common.nav.about")
                            li
                                a(href="/#!/works" data-ng-i18next="common.nav.works")
                            li
                                a(href="/#!/contact" data-ng-i18next="common.nav.contact")
                                
                    p.copyright Â© 
                        span(itemprop="copyrightYear") 2015 
                        span(itemprop="copyrightHolder") Cyril Schumacher. 
                        span(data-ng-i18next="common.footer.all_right_reserved")

                section.l-footer-container-links
                    ul.social-icons
                        li.social-icon
                            a.github.button(rel="external" href="https://github.com/cyrilschumacher" data-ng-i18next="[title]common.footer.go_to_github")
                                i.button-text.fa.fa-github
                                span.button-text.name GitHub
                        li.social-icon
                            a.linkedin.button(rel="external" href="http://www.linkedin.com/in/cyrilschumacher" data-ng-i18next="[title]common.footer.go_to_linkedin")
                                i.button-text.fa.fa-linkedin
                                span.button-text.name Linkedin
                        li.social-icon
                            a.twitter.button(rel="external" href="http://www.twitter.com/CyrilSchumacher" data-ng-i18next="[title]common.footer.go_to_twitter")
                                i.button-text.fa.fa-twitter
                                span.button-text.name Twitter

        script(data-main="scripts/main.js" src="/scripts/vendor/requirejs/require.js")
        script(src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0")