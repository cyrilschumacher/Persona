doctype html
html(lang="{{language}}" prefix="og:http://ogp.me/ns#")
	head
		meta(charset="utf-8")
		title(data-ng-bind="viewTitle ? viewTitle + ' | Cyril Schumacher' : 'Cyril Schumacher'")

		meta(name="description" content="{{viewDescription}}")
		meta(property="og:title" content="")
		meta(property="og:type" content="")
		meta(property="og:url" content="")
		meta(property="og:image" content="")
		meta(name="viewport" content="width=device-width, user-scalable=no")
		meta(name="msvalidate.01" content="BD1F594BA412B936EF9573364E3DD353")
