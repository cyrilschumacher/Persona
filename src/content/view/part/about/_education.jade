section#education.l-section.l-section--about
	header.l-section__header.l-section--about__header
		.icon
			span.icon__content.ion-ios-bookmarks-outline
		h2(data-ng-i18next="view.about.education.title")
		p.subtitle(data-ng-i18next="view.about.education.subtitle")
	section.l-section__sub_section
		#cd-timeline.cd-container
			.cd-timeline-block(data-ng-repeat="school in schools | orderBy: 'period.start':true")
				.cd-timeline-img
					span(data-ng-bind="school.period.end | date:'yyyy'")
				.cd-timeline-content
					header
						h3(data-ng-bind="school.name")
					section
						ul
							li(data-ng-repeat="degree in school.degrees[language]" data-ng-bind="degree")
					footer
						.post-tag
							span de
							time(datetime="{{school.period.start}}") {{school.period.start | date:'MMMM yyyy'}}
							span(data-ng-hide="!school.period.end") Ã 
							time(data-ng-hide="!school.period.end" datetime="{{school.period.end}}") {{school.period.end | date:'MMMM yyyy'}}
 
