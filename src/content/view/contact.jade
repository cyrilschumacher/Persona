mixin manami-text-input-effect(id, i18next, type, model)
    - text = text || "text"
    span.input.input--manami(data-is-filled data-css-class-filled="input--filled" data-input-id=id)
        input.input__field.input__field--manami(data-ng-model=model id=id name=id type=type)
        label.input__label.input__label--manami(for=id)
            span.input__label-content.input__label-content--manami(data-ng-i18next=i18next)

header.l-header.l-header--contact
    .l-header.__wrapper.l-header.l-header--contact__wrapper
        .l-header.__wrapper__background.l-header.l-header--contact__wrapper__background
        .l-header.__wrapper__content.l-header.l-header--contact__wrapper__content
            h1(data-ng-i18next="[html]view.contact.many_routes")
            p.l-header__wrapper__content__subtitle.l-header--contact__wrapper__content__subtitle(data-ng-i18next="view.contact.for_questions")

section.l-section.l-section--contact
    header.l-section__header.l-section--contact__header
        h2(data-ng-i18next="view.contact.postal_address")
    section.l-section.l-section--contact__postal_address
        div.l-section.l-section--contact__postal_address__map
            bing-map(options="mapOptions.options" center="mapOptions.center" zoom="mapOptions.zoom")
                pushpin(lat="pushpin.location.latitude" lng="pushpin.location.longitude" options="pushpin.options" events="pushpin.events")
                    info-box(options="infobox.options" title="infobox.title" description="infobox.description" visible="infobox.visible")

section.l-section.l-section--contact
    header.l-section__header.l-section--contact__header
        h2(data-ng-i18next="view.contact.online")
    section.l-section--contact__online
        form
            p
                +manami-text-input-effect("email", "view.contact.email_address", "email", "model.form.email_address")
            p
                +manami-text-input-effect("subject", "view.contact.subject", "text", "model.form.subject")
            br
            p
                label(for="message") Message
                textarea#message(data-autosize data-is-filled data-css-class-filled="message-filled" data-input-id="message" data-ng-model="model.form.message" name="message")
            p
                input.btn(type="submit" value="Envoyer mon message")
