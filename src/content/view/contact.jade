include mixins/img-base64

header.l-header.no-selection(data-ng-init="init()")
    div.l-header__content(data-ng-fade-by-scroll data-percentage="25" data-element=".l-header__content > *")
        div.l-header__content__sprite
            img.l-header__content__sprite__sun(src="/content/image/sprite/sun.png")
            img.l-header__content__sprite__earth(src="/content/image/sprite/earth.png")
            img.l-header__content__sprite__asteroid1(src="/content/image/sprite/asteroid1.png")
            img.l-header__content__sprite__asteroid2(src="/content/image/sprite/asteroid2.png")
            img.l-header__content__sprite__satellit(src="/content/image/sprite/satellit.png")
        div.l-header__content__title
            h1(data-view-title data-ng-i18next="contact.contact_me")
            p(data-ng-i18next="contact.you_have_questions")

article.l-article
    header
        h2(data-ng-i18next="contact.form.title")
        p.l-article__header__subtitle(data-ng-i18next="contact.form.subtitle")
    section.l-section.l-section__form
        form.contact-form(name="contactForm" data-ng-submit="submit()")
            p(data-ng-i18next="contact.form.description")
            fieldset
                div.flex-row
                    div.contact-form__name
                        label(data-ng-i18next="contact.form.firstname")
                        p
                            input(data-ng-model="form.firstname" type="text" maxlength="40")
                            span.field-information 3 à 40 caractères maximum.
                    div.separator
                    div.contact-form__name
                        label(data-ng-i18next="contact.form.lastname")
                        p
                            input(data-ng-model="form.lastname" type="text" maxlength="40")
                            span.field-information 3 à 40 caractères maximum.

                label.required-label(data-ng-i18next="contact.form.email")
                p  
                    input(required data-ng-model="form.emailAddress" type="email" size="64" aria_required="true")
                    span.field-information 255 caractères maximum. Exemple: email@example.com
            fieldset
                label.required-label(data-ng-i18next="contact.form.subject")
                p
                    input(required data-ng-model="form.subject" type="text" size="64" aria_required="true")
                    span.field-information 255 caractères maximum.

                label.required-label(data-ng-i18next="contact.form.message")
                p
                    textarea#message(required data-ng-autosize data-ng-model="form.message" rows="1" maxlength="5000")
            fieldset.flex-row.captcha
                img.captcha__image(data-ng-click="refreshCaptcha()" src="{{captcha}}")
                div.captcha__input
                    label.required-label Captcha
                    p
                        input(required data-ng-model="form.captcha" type="text" aria_required="true")

            fieldset
                button(type="submit" data-ng-i18next="contact.form.send_my_message" data-ng-disabled="contactForm.$invalid")
