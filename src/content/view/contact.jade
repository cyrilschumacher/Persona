header.l-header.no-selection(data-ng-init="init()")
    div.l-header-wrapper(data-ng-fade-by-scroll percentage="25" data-element=".l-header-wrapper .container")
        div.container
            h1(data-view-title data-ng-i18next="contact.contact_me")
            p.description(data-ng-i18next="contact.you_have_questions")

article.l-article.map-section
    header
        h2(data-ng-i18next="contact.find_me")
        p.subtitle Découvrez où je réside actuellement
    section.l-section
        div(data-ng-bing-maps map-options="mapOptions" view-options="viewOptions" pushpins="pushpins")
article.l-article
    div.form-section
        header
            h2(data-ng-i18next="contact.form.title")
            p.subtitle Compléter les champs ci-dessous
        section.l-section.form-content
            form(name="contactForm" data-ng-submit="submit()")
                p(data-ng-i18next="contact.form.description")
                fieldset
                    label(data-ng-i18next="contact.form.email")
                    span.input-required *
                    p  
                        input(required data-ng-model="form.emailAddress" type="email" size="64" aria_required="true")
                        span.field-information 255 caractères maximum. Exemple: email@example.com

                fieldset
                    label(data-ng-i18next="contact.form.subject")
                    span.input-required *
                    p
                        input(required data-ng-model="form.subject" type="text" size="64" aria_required="true")
                        span.field-information 255 caractères maximum.

                    label(data-ng-i18next="contact.form.message")
                    span.input-required *
                    p
                        textarea#message(required data-ng-autosize data-ng-model="form.message" rows="1" maxlength="5000")

                fieldset
                    button(type="submit" data-ng-i18next="contact.form.send_my_message" data-ng-disabled="contactForm.$invalid")
div.alert
    div.alert-content
        header
            p
                i.fa.fa-check-circle
            h2(data-ng-i18next="thanks")
        section
            p(data-ng-i18next="contact.form.your_message_has_been_sent")
            p
                a.button(data-ng-click="reset()")
                    span.button-text.text-uppercase(ng-i18next="close")